{
  "manifest_version": 3,
  "name": "Auto zoom out",
  "description": "ページを画面サイズに合わせてズームアウトする拡張機能",
  "version": "0.5",
  "browser_action": {
    "default_icon": "icon128.png",
    "default_title": "Auto zoom out",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["storage"]
}
